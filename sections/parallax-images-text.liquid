{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .parallax-image--section {
    background: #F4AFA8;
    margin-bottom: -40px;
  }
  .section-{{ section.id }}-padding {
    background: #F4AFA8;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: 400px;
  }
  .parallax-image--section .rich-text__blocks {
    max-width: 780px;
  }
  .parallax-image--section .h0 {
    max-width: 700px;
    margin: 0 auto;
  }
  .parallax-image--section .rich-text__text {
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: 280px;
      padding-bottom: 280px;
    }
    .parallax-image--section h2.italic-heading {
      font-size: 42px !important;
      letter-spacing: 0.2px;
    }
  }

  .parallax-backgrounds {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: -1;
  }
  .parallax-image {
      display: inherit !important;
      position: absolute;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      will-change: transform;
      transition: transform 0.1s ease-out;
  }
  .parallax-image-1 {
      top: -40%;
      left: 5%;
      width: 292px;
      height: 340px;
  }
  .parallax-image-2 {
      top: -43%;
      right: 4%;
      width: 292px;
      height: 340px;
  }
  .parallax-image-3 {
      top: -25%;
      left: 3%;
      width: 240px;
      height: 279px;
  }
  .parallax-image-4 {
    top: -30%;
    right: 0%;
    width: 270px;
    height: 314px;
  }
  .parallax-image-5 {
    top: -25%;
    left: 8%;
    width: 270px;
    height: 314px;
  } 
  .parallax-image-6 {
    top: -30%;
    right: 20%;
    width: 240px;
    height: 279px;
  }
  @media screen and (max-width: 749px) {
    .parallax-image-1 {
        top: auto;
        bottom: 32%;
        left: 10%;
        width: 153px;
        height: 156px;
        border-radius: 8px;
    }
    .parallax-image-2 {
      top: auto;
      bottom: 28%;
      right: 4%;
      width: 132px;
      height: 130px;
      border-radius: 8px;
    }
    .parallax-image-4 {
        top: auto;
        top: auto;
        bottom: 108%;
        right: 5%;
        width: 160px;
        height: 152px;
        border-radius: 8px;
    }
    .parallax-image-5 {
        top: auto;
        bottom: 124%;
        left: 3%;
        width: 146px;
        height: 146px;
        border-radius: 8px;
    } 
    .parallax-image-3,
    .parallax-image-6 {
      display: none !important;
    }
  }

@media (prefers-reduced-motion: no-preference) {
  .parallax-backgrounds .parallax-image {
    transform: translateY(-15%);
  }
